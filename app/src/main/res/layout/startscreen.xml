<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg">

	<TextView
		android:id="@+id/welcome"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/registration"
		android:layout_centerInParent="true"
		android:layout_marginBottom="27dp"
		android:text="Добро пожаловать!"
		android:textColor="#FFFFFF"
		android:textSize="27dp"
		android:textStyle="bold">

	</TextView>

	<Button
		android:id="@+id/enterbtn"
		android:layout_width="180dp"
		android:layout_height="56dp"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="102dp"
		android:background="@drawable/rectangle_354_shape"
		android:onClick="enter_activity"
		android:text="Войти"
		android:textAllCaps="false"
		android:textColor="#293139"
		android:textSize="20dp">

	</Button>

	<Button
		android:id="@+id/registration"
		android:layout_width="255dp"
		android:layout_height="56dp"
		android:layout_above="@+id/enterbtn"
		android:layout_centerInParent="true"
		android:layout_marginBottom="17dp"
		android:background="@drawable/rectangle_351_shape"
		android:onClick="registration_activity"
		android:text="Зарегистрироваться"
		android:textAllCaps="false"
		android:textColor="#FFFFFF"
		android:textSize="20dp">

	</Button>

</RelativeLayout>