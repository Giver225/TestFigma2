<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E5EAED"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="-64dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/login_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Логин"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="#003B5D"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/login_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loginkekis123"
                android:textColor="#000000"
                android:textSize="22dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_6" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <TextView
                android:id="@+id/phone_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Номер телефона"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="#003B5D"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/phone_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+7 800 555 3535"
                android:textColor="#000000"
                android:textSize="22dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_6" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <TextView
                android:id="@+id/male_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Пол"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="#003B5D"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/male_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="М"
                android:textColor="#000000"
                android:textSize="22dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_6" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <TextView
                android:id="@+id/email_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="#003B5D"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/email_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="goverdovski_da@mail.ru"
                android:textColor="#000000"
                android:textSize="22dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_6" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <TextView
                android:id="@+id/date_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата рождения"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                android:textColor="#003B5D"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/date_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23.12.2002"
                android:textColor="#000000"
                android:textSize="22dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_6" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>